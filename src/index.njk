---
layout: default
changeFreq: daily
pagination:
  data: collections.posts
  size: 10
  reverse: true
---

<link rel="stylesheet" href="/masthead.css">

<header role="banner" class="relative pt-12 pb-20 bg-center bg-cover masthead md:pt-24 md:pb-40">
  <h1 class="max-w-sm mx-auto text-3xl text-center md:text-5xl sm:max-w-md md:max-w-2xl header-shadow-light dark:header-shadow-dark">{{ metadata.subtitle }}</h1>
  <h3 class="max-w-sm mx-auto text-xl text-center md:text-3xl sm:max-w-md md:max-w-2xl header-shadow-light dark:header-shadow-dark">{{ metadata.description }}</h3>
  <div class="absolute inset-x-0 bottom-0 mx-auto text-xs max-w-7xl md:text-sm dark:invisible">
    <p class="float-right px-2 mx-5 bg-gray-100 dark:bg-gray-900">Photo by <a href="https://unsplash.com/@{{ unsplash.default.user.username }}?utm_source={{ metadata.unsplash.utm_source }}&utm_medium=referral">{{ unsplash.default.user.name }}</a></p>
  </div>
  <div class="absolute inset-x-0 bottom-0 invisible mx-auto text-xs max-w-7xl md:text-sm dark:visible">
    <p class="float-right px-2 mx-5 bg-gray-100 dark:bg-gray-900">Photo by <a href="https://unsplash.com/@{{ unsplash.default_dark.user.username }}?utm_source={{ metadata.unsplash.utm_source }}&utm_medium=referral">{{ unsplash.default_dark.user.name }}</a></p>
  </div>
</header>

<main role="main" class="bg-gray-200 dark:bg-gray-800">
  <div class="pt-6 xl:pt-12 md:max-w-7xl md:mx-auto md:flex md:flex-wrap">
    {% for post in pagination.items %}
      {% include "partial/post-card.njk" %}
    {% endfor %}
  </div>

  <nav class="flex justify-between px-5 m-auto md:max-w-7xl">
    {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}"><i class="p-3 text-2xl font-bold text-gray-100 material-icons bg-primary dark:text-gray-900">chevron_left</i></a>
    {% else %}
    <div aria-hidden="true"></div>
    {% endif %}
    {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}"><i class="p-3 text-2xl font-bold text-gray-100 material-icons bg-primary dark:text-gray-900">chevron_right</i></a>
    {% endif %}
  </nav>
</main>
