permalink: masthead.css
---

:root {
  --unsplash-url-sm: url("{{ unsplash.default.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=640");
  --unsplash-url-md: url("{{ unsplash.default.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=768");
  --unsplash-url-lg: url("{{ unsplash.default.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=1024");
  --unsplash-url-xl: url("{{ unsplash.default.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=1280");
  --unsplash-url-2xl: url("{{ unsplash.default.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=2560");
}

:root[class*='dark'] {
  --unsplash-url-sm: url("{{ unsplash.default_dark.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=640");
  --unsplash-url-md: url("{{ unsplash.default_dark.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=768");
  --unsplash-url-lg: url("{{ unsplash.default_dark.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=1024");
  --unsplash-url-xl: url("{{ unsplash.default_dark.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=1280");
  --unsplash-url-2xl: url("{{ unsplash.default_dark.urls.raw | safe }}{{ metadata.unsplash.common_query | safe }}&w=2560");
}

.masthead {
  background-image: var(--unsplash-url-sm);
}

@media (min-width: 640px) {
  .masthead {
    background-image: var(--unsplash-url-md);
  }
}

@media (min-width: 768px) {
  .masthead {
    background-image: var(--unsplash-url-lg);
  }
}

@media (min-width: 1024px) {
  .masthead {
    background-image: var(--unsplash-url-xl);
  }
}

@media (min-width: 1280px) {
  .masthead {
    background-image: var(--unsplash-url-2xl);
  }
}
